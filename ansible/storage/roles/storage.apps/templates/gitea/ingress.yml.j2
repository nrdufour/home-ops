---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: gitea
  annotations:
    cert-manager.io/cluster-issuer: ca-cluster-issuer
    cert-manager.io/common-name: git.home
    traefik.ingress.kubernetes.io/router.entrypoints: web, websecure
    traefik.ingress.kubernetes.io/router.middlewares: apps-redirect@kubernetescrd

spec:
  rules:
    - host: "git.home"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: gitea-web
                port:
                  number: 3000
  tls:
    - hosts:
      - git.home
      secretName: gitea-web-ing-cert