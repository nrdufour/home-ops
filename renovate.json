{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "flux": {
    "fileMatch": ["(^|/)kubernetes/.+\\.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)kubernetes/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)ansible/.+\\.yaml\\.j2$",
      "(^|/)kubernetes/.+\\.yaml$"
    ]
  },

  "ignorePaths": [
    "kubernetes/main/apps/default/influxdb/app/**"
  ]
}
