{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":skipStatusChecks",
    ":timezone(America/New_York)"
  ],

  "flux": {
    "fileMatch": ["(^|/)kubernetes/.+\\.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)kubernetes/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)ansible/.+\\.yaml\\.j2$",
      "(^|/)kubernetes/.+\\.yaml$"
    ]
  },

  "ignorePaths": [
    "kubernetes/archives/**",
    "kubernetes/main/apps/default/influxdb/app/**"
  ]
}
